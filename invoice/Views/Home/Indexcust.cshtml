@model IEnumerable<invoice.Models.tblcustomer>

@{
    ViewBag.Title = "Indexcust";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer List</h2>

<p>
    @Html.ActionLink("Create New", "addcustomer")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Customer ID")
        </th>
        <th>
            @Html.Label("Name")
        </th>
        <th>
            @Html.Label("Mobile No")
        </th>
        <th>
            @Html.Label("EmailID")
        </th>
        <th>
            @Html.Label("Address")
        </th>
        <th>
            @Html.Label("Edit/Delete")
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.billno)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idcustomer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mobileno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emailid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.billno)
            </td>*@
            <td>
                @Html.ActionLink("Edit", "edit", new { id = item.idcustomer }) |
                @Html.ActionLink("Delete", "delete", new { id = item.idcustomer })
            </td>
        </tr>
    }

</table>